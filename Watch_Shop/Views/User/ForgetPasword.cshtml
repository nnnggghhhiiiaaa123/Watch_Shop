<script>
    $('#forgot-btn').click(function (e) {
        e.preventDefault();
        var ValueEmail = $('#email').val();
        if (ValueEmail == "") {
            alert("Email không được để trống !!!!");
            return;
        }
        var $this = $(this);
        var loadingText = '<i class="fa fa-circle-o-notch fa-spin"></i>&nbsp;Vui lòng chờ trong giây lát... ';
        if ($(this).html() !== loadingText) {
            $this.data('original-text', $(this).html());
            $this.html(loadingText);
            $this.attr('disabled', 'disabled');
            $this.css("background", "#ddd");
        }
        $.ajax({
            url: '/User/SendToken',
            type: 'post',
            data: { ToEmail: ValueEmail },

            success: function (res) {
                if (res.status) {
                    $('.form_email').css("display", "none");
                    $('.confirm_Token').css("display", "flex");
                    $("#message_text").text("Please check your email and enter the token we sent you !!!")
                } else {
                    alert("Email không tồn tại !!!");
                    btn_Default();
                }
            },
            error: function (res) {
                alert(res.responseText);
                btn_Default();
            }

        })
    });
    $('#btn_ConfirmToken').click(function () {
        var ValueToken = $('input[name = "input_Token"]').val();
        var ValueEmail = $('input[name = "input_Email"]').val();

        if (ValueToken == "") {
            alert("Vui lòng không để trống !!!");
            return;
        }
        $.ajax({
            url: '/User/ConfirmToken',
            type: 'post',
            data: { ToEmail: ValueEmail, token: ValueToken },

            success: function (res) {
                if (res.status) {
                    $('#Your_Password').html('<span>Your password: ' + res.data + '</span>');
                } else {
                    $('#Your_Password').html('<span>Mã token không chính xác</span>');
                }
            },
            error: function (res) {
                alert(res.responseText);
            }

        })
    })
    $('#btn_ComeBack_Email').click(function () {
        $('.confirm_Token').css("display", "none");
        $('.form_email').css("display", "block");
        btn_Default();

    })
    function btn_Default() {
        $('#forgot-btn').removeAttr("disabled");
        $('#forgot-btn').css("background-image", "linear-gradient(to right, rgb(10 207 254) 0%, rgb(73 90 255) 100%)");
        $('#forgot-btn').text("Đồng ý");
    }
</script>